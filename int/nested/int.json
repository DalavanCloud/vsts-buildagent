{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {

        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "numberOfDisks": {
            "type": "int"
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "mynsg",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2015-06-15",
            "location": "[parameters('location')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "SSH",
                        "properties": {
                            "priority": "[parameters('numberOfDisks')]",
                            "protocol": "Tcp",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourceAddressPrefix": "*",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "22"
                        }
                    }
                ]
            }
        },
        {
            "name": "[concat('vm','/config')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "location": "[parameters('location')]",
            "apiVersion": "2015-06-15",
            "properties": {
              "publisher": "Microsoft.Azure.Extensions",
              "type": "CustomScript",
              "typeHandlerVersion": "2.0",
              "autoUpgradeMinorVersion": true,
              "settings": {
                "timestamp":123456789
              },
              "protectedSettings": {
                 "commandToExecute": "[concat('/bin/bash setupagent.sh', ' \"')]",
                 "fileUris": ["https://raw.githubusercontent.com/marcvaneijk/vsts-buildagent/master/int/scripts/setupagent.sh"]  
              }
            }
          }
    ],
    "outputs": {}
}